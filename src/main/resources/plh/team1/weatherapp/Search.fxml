<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" prefHeight="720.0" prefWidth="1024.0" spacing="20.0" styleClass="container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plh.team1.weatherapp.SearchController">
    <children>
        <HBox alignment="CENTER_RIGHT" minHeight="-Infinity" prefHeight="54.0" prefWidth="0.0" spacing="20.0" stylesheets="@styles.css">
            <children>
                <Button fx:id="searchButton" onAction="#switchToOverview" stylesheets="@styles.css" text="Overview">
                    <styleClass>
                        <String fx:value="cursor-pointer" />
                        <String fx:value="menu-item" />
                    </styleClass>
                </Button>
                <Label stylesheets="@styles.css" text="Search">
                    <styleClass>
                        <String fx:value="menu-item" />
                        <String fx:value="active" />
                    </styleClass>
                </Label>
            </children>
            <styleClass>
                <String fx:value="navigation" />
                <String fx:value="divider-bottom" />
            </styleClass>
        </HBox>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <TextField fx:id="searchBar" promptText="Type city name and hit enter..." AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
            <Button fx:id="clear" mnemonicParsing="false" opacity="0.7" prefHeight="25.0" prefWidth="35.0" stylesheets="@styles.css" text="x" textAlignment="CENTER" AnchorPane.rightAnchor="0.0">
               <styleClass>
                  <String fx:value="clear-btn" />
                  <String fx:value="cursor-pointer" />
               </styleClass></Button>
                <ListView fx:id="cityListView" prefHeight="200.0" prefWidth="200.0" styleClass="overlay" stylesheets="@styles.css" visible="false" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="28.0" />
         </children>
      </AnchorPane>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
