<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="weatherdataPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>plh.team1.weatherapp.model.WeatherData</class>
        <class>plh.team1.weatherapp.model.City</class>
        <properties>
            <!-- Uncomment the following 4 lines to connect to a server DB-->          
            <!--            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/weatherappdb"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.client.ClientAutoloadedDriver"/>
            <property name="javax.persistence.jdbc.user" value="eap"/>
            <property name="javax.persistence.jdbc.password" value="eap"/>-->
            
            <!-- Uncomment the following 2 lines to connect to an embedded DB-->
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:weatherappdb;create=true"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.iapi.jdbc.AutoloadedDriver"/>
            
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
            <property name="eclipselink.ddl-generation" value="create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
